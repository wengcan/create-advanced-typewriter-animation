{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2015","DOM","DOM.Iterable"],
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist", 

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["lib/*.ts"],
  "exclude": ["node_modules"]
}
